{
  "compilerOptions": {
    // === Module & Target Options ===
    "target": "ES2020",
    "module": "NodeNext", // <-- Changed to NodeNext
    "moduleResolution": "NodeNext", // <-- Changed back to NodeNext
    "lib": ["ES2020"],
    "types": ["node"],

    // === Output Options ===
    "outDir": "dist",
    "rootDir": "src",

    // === Interoperability & Strictness ===
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
